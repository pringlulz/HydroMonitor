@inherits LayoutComponentBase
@inject NavigationManager _navManager

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>
    
    @if (_navManager.Uri.Contains("manageSensors"))
    {@*  add an extra sidebar if we're on the manage sensors screen' *@
        <div class="sidebar">
            <HydroMonitor.Components.Pages.SensorList />
        </div>
    }

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
