@page "/addSensor"
@using HydroMonitor.Models
@using HydroMonitor.Repository
@using HydroMonitor.Services

@inherits ComponentBase

@inject SensorDAO sensorDAO; //add the singleton from the application context
@inject SensorTypeDAO sensorTypeDAO;
@inject GeolocationService geolocation;



<h3>Add Sensor</h3>
<section class="col-lg-6 col-sm-12">

    <div class="form-group">
        <label class="form-label">Sensor Name</label>
        <InputText @bind-Value="sensor.Name" class="form-control" />
    </div>

    
    <div class="form-group">
        <label class="form-label">MAC Address</label>
        @* uses ARPService to scan the network for existing MAC addresses. *@
        <InputText @bind-Value="sensor.macAddress" class="form-control" list="addressesOnNetwork" />
        <datalist id="addressesOnNetwork">
            @foreach (var address in macAddresses)
            {
                <option value="@address">@address</option>
            }
        </datalist>
    </div>
    <ul>

    </ul>
    
    <div class="form-group">
        <label class="form-label">Sensor Type
            <InputSelect class="form-select" @bind-Value="selectedType" @onselectionchange=typeChanged>
                @foreach (var type in sensorTypes)
                { // list of different sensor types.
                    <option value="@type">@type.Name</option>
                }
            </InputSelect>
        </label>
    </div>
    <button class="btn btn-primary col-sm-3" @onclick="submit">Save</button>
</section>

@* Leave picking the map location to the other screen since it's on a different object anyway*@

@code {

    private SensorType? selectedType { get; set; }
    private Sensor? sensor { get; set; }
    private List<SensorType>? sensorTypes { get; set; } = new List<SensorType>();
    private List<String> macAddresses { get; set; } = new List<String>();

    protected override async Task  OnInitializedAsync()
    { //populate all the lists and things that will throw an error if it's a null value
        sensor = new Sensor();
        sensorTypes = await sensorTypeDAO.Load();
        System.Diagnostics.Debug.WriteLine($"loaded sensor type list");
        macAddresses = ARPService.GetMacAddresses();
        StateHasChanged();
    }


    public void typeChanged()
    { //Couldn't get the type to map directly so we'll just take the typeId and go with that.
        sensor.SensorType = selectedType;
        sensor.SensorTypeId = selectedType.typeId;
    }


    public async void submit()
    {
        //send to database
        if (sensor != null)
        {
            await sensorDAO.Save(sensor);
            System.Diagnostics.Debug.WriteLine($"Saved sensor as id: {sensor.SensorId}");
        }

        //TODO: add confirmation message to webpage

    }

}
